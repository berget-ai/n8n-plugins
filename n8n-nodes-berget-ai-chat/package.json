{
  "name": "@bergetai/n8n-nodes-berget-ai-chat",
  "version": "1.0.0",
  "description": "n8n node for Berget AI chat/text models",
  "keywords": [
    "n8n-community-node-package",
    "n8n",
    "berget-ai",
    "ai",
    "chat",
    "llm"
  ],
  "license": "MIT",
  "homepage": "https://github.com/bergetai/n8n-plugins",
  "author": "Berget AI <kontakt@berget.ai>",
  "repository": {
    "type": "git",
    "url": "https://github.com/bergetai/n8n-plugins.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "index.js",
  "scripts": {
    "build": "tsc && npm run build:icons",
    "build:icons": "mkdir -p dist/nodes && cp -r nodes/**/*.svg dist/nodes/ 2>/dev/null || true",
    "dev": "tsc --watch",
    "format": "prettier nodes --write",
    "lint": "eslint nodes package.json",
    "lintfix": "eslint nodes package.json --fix",
    "test": "npm run build && node test/test-node.js",
    "test:local": "npm run build && npm link && echo 'Plugin linked! Start n8n with: n8n start'",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/BergetAiApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/BergetAiChat/BergetAiChat.node.js"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.0",
    "n8n-workflow": "^1.112.0",
    "prettier": "^2.8.8",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "axios": "^1.12.2"
  }
}
