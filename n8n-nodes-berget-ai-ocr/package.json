{
  "name": "@bergetai/n8n-nodes-berget-ai-ocr",
  "version": "1.0.0",
  "description": "n8n node for Berget AI OCR document processing",
  "keywords": [
    "n8n-community-node-package",
    "n8n",
    "berget-ai",
    "ocr",
    "document",
    "ai"
  ],
  "license": "MIT",
  "homepage": "https://github.com/bergetai/n8n-plugins",
  "author": "Berget AI <hello@berget.ai>",
  "repository": {
    "type": "git",
    "url": "https://github.com/bergetai/n8n-plugins.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
